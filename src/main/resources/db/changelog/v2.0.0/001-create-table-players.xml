<databaseChangeLog
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.10.xsd">

    <!-- Создание таблицы игроков -->
    <changeSet context="production,test" id="001-create-table-players" author="admin">
        <createTable tableName="players" remarks="Таблица игроков">
            <column name="player_id"
                    type="BIGINT"
                    autoIncrement="true"
                    remarks="Идентификатор игрока">
                <constraints nullable="false"
                             primaryKey="true"
                             primaryKeyName="pk_players"/>
            </column>
            <column name="name"
                    type="VARCHAR(255)"
                    defaultOnNull="false"
                    remarks="Имя">
                <constraints nullable="false"
                             unique="true"/>
            </column>
            <column name="password"
                    type="VARCHAR(255)"
                    defaultOnNull="false"
                    remarks="Пароль">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

</databaseChangeLog>